{
    "manifest_version": 2,
    "name": "Skip Youtube Ads",
    "version": "1.0",
    "description": "Instant removal of YT skippable video ads and overlayed ads.",
    "icons": {
        "16": "icons/skip-track-16.png",
        "32": "icons/skip-track-32.png",
        "48": "icons/skip-track-48.png",
        "128": "icons/skip-track-128.png"
    },
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": ["youtube-skip-ads.js"],
        "run_at": "document_end"
    }]
}